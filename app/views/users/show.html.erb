<dl class="dl-horizontal">
  <dt>Email</dt>
  <dd><%= @user.email %></dd>

  <dt>First name:</dt>
  <dd><%= @user.first_name %></dd>

  <dt>Last name:</dt>
  <dd><%= @user.last_name %></dd>
</dl>

<div class="form-actions">
  <%= link_to '<i class="icon-arrow-left icon-2x"></i>'.html_safe, :back, class: 'btn btn-graphic', 'data-toggle' => 'tooltip', title: 'Back'  %>
  <%= link_to '<i class="icon-edit icon-2x"></i>'.html_safe, edit_user_path(@user), class: 'btn btn-warning btn-graphic', 'data-toggle' => 'tooltip', title: 'Edit'  %>
</div>
