<h1>Listing confirmations</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Service order</th>
    <th>Performed on</th>
    <th>Travel hours</th>
    <th>Straight hours</th>
    <th>Overtime hours</th>
    <th>Doubletime hours</th>
    <th>Description</th>
    <th>Number</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @confirmations.each do |confirmation| %>
  <tr>
    <td><%= confirmation.service_order.number %></td>
    <td><%= confirmation.performed_on %></td>
    <td><%= confirmation.travel_hours %></td>
    <td><%= confirmation.straight_hours %></td>
    <td><%= confirmation.overtime_hours %></td>
    <td><%= confirmation.doubletime_hours %></td>
    <td><%= confirmation.description %></td>
    <td><%= confirmation.number %></td>
    <td><%= confirmation.user.full_name %></td>
    <td><%= link_to 'Show', confirmation, class: 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_confirmation_path(confirmation), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', confirmation, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
