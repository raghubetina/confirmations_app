<p>
  <b>Number:</b>
  <%= @service_order.number %>
</p>

<p>
  <b>Description:</b>
  <%= @service_order.description %>
</p>

<p>
  <b>Category:</b>
  <%= @service_order.category.name %>
</p>

<p>
  <b>Budget:</b>
  <%= @service_order.budget %>
</p>

<p>
  <b>User:</b>
  <%= @service_order.user.full_name %>
</p>

<h3>Confirmations</h3>
<table class="table table-striped table-hover">
  <tr>
    <th>Service order</th>
    <th>Performed on</th>
    <th>Travel hours</th>
    <th>Straight hours</th>
    <th>Overtime hours</th>
    <th>Doubletime hours</th>
    <th>Description</th>
    <th>Number</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @service_order.confirmations.each do |confirmation| %>
  <tr>
    <td><%= confirmation.service_order.number %></td>
    <td><%= confirmation.performed_on %></td>
    <td><%= confirmation.travel_hours %></td>
    <td><%= confirmation.straight_hours %></td>
    <td><%= confirmation.overtime_hours %></td>
    <td><%= confirmation.doubletime_hours %></td>
    <td><%= confirmation.description %></td>
    <td><%= confirmation.number %></td>
    <td><%= confirmation.user.full_name %></td>
    <td><%= link_to 'Show', confirmation, class: 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_confirmation_path(confirmation), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', confirmation, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Edit', edit_service_order_path(@service_order), class: 'btn btn-warning' %>
<%= link_to 'Delete', edit_service_order_path(@service_order), class: 'btn btn-danger' %>
<%= link_to 'Back', service_orders_path, class: 'btn' %>
