<section id="utilization">
  <h3><%= @today.strftime("%b %Y") %> Utilization (<%= @utilization %>%)</h3>
  <div class="progress progress-striped progress-success">
    <div class="bar" style="width: <%= @utilization %>%;"></div>
  </div>
</section>

<section id="service-orders">
  <div class="page-header">
    <h3>
      Service Orders
      <%= link_to '<i class="icon-plus"></i>'.html_safe, new_service_order_path, class: 'btn', style: 'margin-bottom: 5px' %>
    </h3>
  </div>

  <ul class="nav nav-tabs" id="myTab">
    <li class="active"><a href="#open">Open</a></li>
    <li><a href="#closed">Closed</a></li>
    <li><a href="#shared">Shared</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="open">
      <%= render 'service_orders', service_orders: @open_service_orders %>
    </div>
    <div class="tab-pane" id="closed">
      <%= render 'service_orders', service_orders: @closed_service_orders %>
    </div>
    <div class="tab-pane" id="shared">
      <%= render 'service_orders', service_orders: @shared_service_orders %>
    </div>
  </div>
</section>
